<div class="edit">
    <h1>Editing Book</h1>
    
    <% if @book.errors.any? %>
        <%= @book.errors.count %>error prohibited this book from being saved:
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
    
    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="edit-title">
            <p>Title</p>
            <%= f.text_field :title %>
        </div>
    
        <div class="edit-body">
            <p>Body</p>
            <%= f.text_area :body %><br>
        </div>
        <div class="edit-button">
            <%= f.submit 'Update Book' %>
        </div>
    <% end %>
    
    <div class="edit-menu">
        <p><%= link_to "Show", book_path(@book.id) %></p>
        <p>|</p>
        <p><%= link_to "Back", "/books" %></p>
    </div>
</div>