<h1>Books</h1>

<% @books.each do |book| %>

<p>Title</p>
<%= book.title %>

<p>Body</p>
<%= book.body %>

<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>